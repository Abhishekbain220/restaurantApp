<%-include("./partials/header")%>
<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
        <h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">Update User</h1>
        <form action="/users/updateUser/<%=user._id%>" method="post" class="space-y-4">
            <!-- Username Input -->
            <div>
                <input type="text" name="username" value="<%=user.username%>" placeholder="Enter Username" 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       required>
            </div>
            <!-- Email Input -->
            <div>
                <input type="email" name="email" value="<%=user.email%>" placeholder="Enter Email" 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       required>
            </div>
            <!-- Role Selection -->
            <div class="flex items-center justify-center space-x-4">
                <div>
                    <input type="radio" name="role" value="owner" id="owner" 
                           class="mr-2" <%= user.role === 'owner' ? 'checked' : '' %>>
                    <label for="owner" class="text-gray-700">Owner</label>
                </div>
                <div>
                    <input type="radio" name="role" value="customer" id="customer" 
                           class="mr-2" <%= user.role === 'customer' ? 'checked' : '' %>>
                    <label for="customer" class="text-gray-700">Customer</label>
                </div>
            </div>
            <!-- Submit Button -->
            <button type="submit" 
                    class="w-full py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition duration-200">
                Update
            </button>
        </form>
        <!-- Reset Password Link -->
        <div class="text-center mt-4">
            <a href="/users/resetPassword" class="text-blue-500 hover:underline">Reset Password</a>
        </div>
    </div>
</div>
<%-include("./partials/footer")%>
