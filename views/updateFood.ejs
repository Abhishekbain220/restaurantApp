<%- include("./partials/header") %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 p-8">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-lg w-full">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Update Food Item</h1>
        
        <form action="/profile/updateFood/<%= food._id %>" enctype="multipart/form-data" method="post" class="space-y-4">
            <!-- Food Name -->
            <div>
                <label for="foodName" class="block text-gray-600 font-medium mb-1">Food Name</label>
                <input type="text" name="foodName" value="<%= food.foodName %>" placeholder="Enter Food Name" 
                       class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
            </div>

            <!-- Food Price -->
            <div>
                <label for="foodPrice" class="block text-gray-600 font-medium mb-1">Food Price</label>
                <input type="number" name="foodPrice" value="<%= food.foodPrice %>" placeholder="Enter Food Price" 
                       class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
            </div>

            <!-- Current Image Preview -->
            <div class="mb-4">
                <label class="block text-gray-600 font-medium mb-1">Current Image</label>
                <img src="/images/<%= food.foodImage %>" alt="Image of <%= food.foodName %>" 
                     class="w-full h-48 object-cover rounded-md mb-2 shadow">
            </div>

            <!-- Upload New Image -->
            <div>
                <label for="foodImage" class="block text-gray-600 font-medium mb-1">Update Image</label>
                <input type="file" name="foodImage" 
                       class="w-full text-gray-700 bg-white border rounded-lg cursor-pointer focus:outline-none focus:ring-2 focus:ring-indigo-500">
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                Update
            </button>
        </form>
    </div>
</div>

<%- include("./partials/footer") %>
