<%-include("./partials/header")%>
<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
        <h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">Reset Password</h1>
        <form action="/users/resetPassword" method="post" class="space-y-4">
            <!-- Old Password Input -->
            <div>
                <input type="text" name="oldPassword" placeholder="Enter Old Password" 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       required>
            </div>
            <!-- New Password Input -->
            <div>
                <input type="password" name="newPassword" placeholder="Enter New Password" 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       required>
            </div>
            <!-- Submit Button -->
            <button type="submit" 
                    class="w-full py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition duration-200">
                Change Password
            </button>
        </form>
    </div>
</div>
<%-include("./partials/footer")%>
