<%-include("./partials/header")%>
<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
        <h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">Login Page</h1>
        <form action="/users/login" method="post" class="space-y-4">
            <div>
                <input type="text" name="username" placeholder="Enter Username" 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       required>
            </div>
            <div>
                <input type="password" name="password" placeholder="Enter Password" 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       required>
            </div>
            <button type="submit" 
                    class="w-full py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition duration-200">
                Login
            </button>
        </form>
        <div class="text-center mt-4">
            <a href="/users/forgetEmail" class="text-blue-500 hover:underline">Forgot Password?</a>
        </div>
    </div>
</div>
<%-include("./partials/footer")%>
